<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">
<suppressions>

    <!-- In Tests keine Javadoc-Pflicht -->
    <suppress files="src/test/java/.*" checks="JavadocType"/>
    <suppress files="src/test/java/.*" checks="JavadocMethod"/>
    <suppress files="src/test/java/.*" checks="MissingJavadocType"/>
    <suppress files="src/test/java/.*" checks="MissingJavadocMethod"/>

    <!-- Optional: generierte Quellen komplett ignorieren -->
    <suppress files="build/generated/.*" checks=".*"/>

</suppressions>
